   "source": [
    "with Loom(\"sine_wave_animation.mp4\", fps=20) as loom:\n",
    "    for phase in tqdm(np.linspace(0, 2*np.pi, 10)):\n",
    "        fig, ax = plt.subplots()\n",
    "        x = np.linspace(0, 2*np.pi, 200)\n",
    "        y = np.sin(x + phase)\n",
    "        \n",
    "        ax.plot(x, y)\n",
    "        \n",
    "        loom.save_frame(fig)\n",
    "\n",
    "loom.show()"
   ]
  },
