    "        X, Y = np.meshgrid(X, Y)\n",
    "        R = np.sqrt(X**2 + Y**2)\n",
    "        Z = np.sin(R)\n",
    "        \n",
    "        surf = ax.plot_surface(X, Y, Z, cmap=\"coolwarm\")\n",
    "        \n",
    "        ax.set_zlim(-1.01, 1.01)\n",
    "        fig.colorbar(surf, shrink=0.5, aspect=5)\n",
    "        \n",
    "        ax.view_init(azim=i*10)\n",
    "\n",
    "        loom.save_frame(fig)\n",
